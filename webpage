  <script>
    // Random lil' starfield
    const starCanvas = document.querySelector('.stars');
    const sctx = starCanvas.getContext('2d');
    function resizeStars(){ starCanvas.width = innerWidth; starCanvas.height = innerHeight; drawStars(); }
    addEventListener('resize', resizeStars);
    function drawStars(){
      sctx.clearRect(0,0,starCanvas.width,starCanvas.height);
      const count = Math.min(200, Math.floor((innerWidth*innerHeight)/9000));
      for(let i=0;i<count;i++){
        const x = Math.random()*starCanvas.width;
        const y = Math.random()*starCanvas.height;
        const r = Math.random()*1.2 + 0.2;
        const alpha = Math.random()*0.7 + 0.3;
        sctx.fillStyle = `rgba(255,255,255,${alpha})`;
        sctx.beginPath(); sctx.arc(x,y,r,0,Math.PI*2); sctx.fill();
      }
    }
    resizeStars();

    // Confetti generator
    const confetti = document.getElementById('confetti');
    function launchConfetti(bursts = 150){
      for(let i=0;i<bursts;i++){
        const d = document.createElement('div');
        d.className = 'piece';
        const hue = Math.floor(Math.random()*360);
        d.style.background = `hsl(${hue} 90% 60%)`;
        d.style.left = Math.random()*100 + 'vw';
        const fall = 6 + Math.random()*5; // seconds
        const rotate = (Math.random()*720 - 360).toFixed(0);
        const delay = Math.random()*0.5;
        d.animate([
          { transform: `translateY(-110vh) rotate(0deg)` },
          { transform: `translateY(110vh) rotate(${rotate}deg)` }
        ], { duration: fall*1000, delay: delay*1000, easing: 'cubic-bezier(.22,.61,.36,1)', fill: 'forwards' });
        confetti.appendChild(d);
        setTimeout(() => d.remove(), (fall+1)*1000);
      }
    }
    document.getElementById('boom').addEventListener('click', () => launchConfetti(220));

    // Balloons
    const balloons = document.getElementById('balloons');
    function releaseBalloons(n=18){
      for(let i=0;i<n;i++){
        const b = document.createElement('div');
        b.className = 'balloon';
        b.textContent = ['üéà','üéâ','üéä','üíñ','‚ú®','ü™©'][Math.floor(Math.random()*6)];
        const x = (Math.random()*90 - 45) + 'px';
        b.style.left = Math.random()*100 + 'vw';
        b.style.setProperty('--x', x);
        b.style.animationDuration = (6 + Math.random()*6) + 's';
        b.style.animationDelay = (Math.random()*0.8) + 's';
        balloons.appendChild(b);
        setTimeout(()=> b.remove(), 14000);
      }
    }
    document.getElementById('float').addEventListener('click', () => releaseBalloons());

    // Save as file (client-only)
    const saveLink = document.getElementById('save');
    saveLink.addEventListener('click', (e) => {
      const blob = new Blob([document.documentElement.outerHTML], { type: 'text/html' });
      const url = URL.createObjectURL(blob); e.currentTarget.href = url;
      setTimeout(() => URL.revokeObjectURL(url), 10000);
    });

    // Gallery uploader (local preview only)
    const input = document.getElementById('file');
    const gal = document.getElementById('gallery');
    input.addEventListener('change', async (e) => {
      const files = Array.from(e.target.files).slice(0, 24);
      files.forEach((file, idx) => {
        const url = URL.createObjectURL(file);
        const card = document.createElement('div');
        card.className = 'polaroid';
        card.style.setProperty('--r', (Math.random()*8 - 4) + 'deg');
        const img = document.createElement('img'); img.src = url; img.alt = `Photo ${idx+1}`;
        const cap = document.createElement('div'); cap.className = 'caption'; cap.textContent = file.name.replace(/\.[^.]+$/, '');
        card.append(img, cap); gal.appendChild(card);
        setTimeout(() => URL.revokeObjectURL(url), 30000);
      });
    });

    // Guestbook notes
    const guestForm = document.getElementById('guestbook');
    const notes = document.getElementById('notes');
    guestForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const input = e.target.querySelector('input');
      const text = input.value.trim(); if(!text) return;
      const note = document.createElement('div');
      note.className = 'polaroid';
      note.style.setProperty('--r', (Math.random()*10 - 5) + 'deg');
      note.innerHTML = `<div style="height:180px;display:flex;align-items:center;justify-content:center;background:linear-gradient(135deg, rgba(255,77,148,.18), rgba(124,245,255,.18)); border-radius:8px; padding:10px; text-align:center; color:#222;">${text}</div>`;
      notes.prepend(note);
      input.value='';
    });

    // Sparkle cursor
    const sparkle = document.getElementById('sparkle');
    window.addEventListener('pointermove', (e) => {
      sparkle.hidden = false;
      sparkle.style.left = e.clientX + 'px';
      sparkle.style.top = e.clientY + 'px';
      const s = document.createElement('div');
      s.className = 'cursor-sparkle';
      s.style.left = e.clientX + 'px'; s.style.top = e.clientY + 'px';
      document.body.appendChild(s);
      s.animate([
        { transform: 'translate(-50%, -50%) scale(1)', opacity: .9 },
        { transform: 'translate(-50%, -60%) scale(0.2)', opacity: 0 }
      ], { duration: 500, easing: 'ease-out', fill: 'forwards' });
      setTimeout(()=> s.remove(), 520);
    });

    // Auto‚Äëparty on load üéâ
    setTimeout(() => { launchConfetti(180); releaseBalloons(14); }, 600);
  </script>
</body>
